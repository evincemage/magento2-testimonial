<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Evincemage_Testimonial::css/testimonial.css" />
    </head>
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="testimonial/active_display/enabled" name="testimonial-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Testimonial</argument>
                    <argument name="path" xsi:type="string">testimonial</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
